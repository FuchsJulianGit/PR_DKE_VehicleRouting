DROP TABLE PERSON;
DROP TABLE VEHICLES;

DROP TABLE ROUTE;

CREATE TABLE Route (
    ID NUMBER GENERATED BY DEFAULT ON NULL AS IDENTITY,
    route_name VARCHAR2(255) NOT NULL UNIQUE,
        VEHICLE_ID NUMBER,
    PRIMARY KEY (ID)
);

DROP TABLE ROUTE_POINT;
CREATE TABLE ROUTE_POINT (
    ID NUMBER GENERATED BY DEFAULT ON NULL AS IDENTITY,
    ROUTE_ID NUMBER,
    SEQUENCE NUMBER,
    ATHOME NUMBER,
    COORDINATE_ID NUMBER,
    CONSTRAINT PK_ROUTE_POINT PRIMARY KEY (ID),
    CONSTRAINT FK_ROUTE FOREIGN KEY (ROUTE_ID) REFERENCES Route(ID) ON DELETE CASCADE
);